package scrapedata;

import java.util.List;

import org.openqa.selenium.By;
import org.openqa.selenium.WebElement;
import org.testng.annotations.Test;

public class Diabetesscrape extends Baseclass {

	@Test 
	
	public void run()
	
	
	
	{
	
		WebElement RecipeBtn = driver.findElement(By.xpath("//div[contains(text(),'RECIPES')]"));
		RecipeBtn.click();
		WebElement PCOSBtn = driver.findElement(By.xpath("//*[@id='ctl00_cntleftpanel_ttlhealthtree_tvTtlHealtht335']"));
		PCOSBtn.click();
		WebElement Table = driver.findElement(By.xpath("//@class='recipelist"));
		//Pagination and all recipes 
		List<WebElement> Pagination = Table.findElements(By.xpath("//@class='rcc_recipecard"));

		//int NoOfPages = Pagination.size();

		for(int i=1;i<=Pagination.size();i++) 
		{
			//WebElement Paginator=driver.findElement(By.xpath("//*[@id='pagination']/a["+i+"]"));
			//Paginator.click(); 
			List<WebElement> totalcolumn = (List<WebElement>) Pagination.get(i).findElement(By.xpath("//@class='rcc_rcpcore"));
			for(int col=0;col<totalcolumn.size(); col++) {
				String cellvalue = totalcolumn.get(col).getText();
				System.out.print(cellvalue +"\t");
			}
			System.out.println();
			}}}


	
