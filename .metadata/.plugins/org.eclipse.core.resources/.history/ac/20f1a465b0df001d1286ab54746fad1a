package scrapedata;

import java.util.List;

import org.openqa.selenium.By;
import org.openqa.selenium.WebElement;
import org.testng.annotations.Test;

public class Diabetesscrape extends Baseclass {

	@Test 
	
	public void run()
	
	
	
	{
	
		WebElement RecipeBtn = driver.findElement(By.xpath("//div[contains(text(),'RECIPES')]"));
		RecipeBtn.click();
		WebElement PCOSBtn = driver.findElement(By.xpath("//*[@id='ctl00_cntleftpanel_ttlhealthtree_tvTtlHealtht335']"));
		PCOSBtn.click();
		//Pagination and all recipes 
				List<WebElement> Pagination = driver.findElements(By.xpath("//*[@id='pagination']/a"));

				int NoOfPages = Pagination.size();
				
				for(int i=1;i<=NoOfPages;i++) 
				{
					WebElement Paginator=driver.findElement(By.xpath("//*[@id='pagination']/a["+i+"]"));
					
					List<WebElement> recipeLinks = driver.findElements(By.xpath("//*[@class=\"recipelist\"]//div//span[@class=\"rcc_recipename\"]//a"));
					
					List<String> listOfNames = new ArrayList<String>();
					
					for (WebElement linkNames : recipeLinks) {
						listOfNames.add(linkNames.getText());
						
					}
					
					for (String recipeNames : listOfNames) {
						System.out.println(recipeNames);
						
					}
					
					Paginator.click();
				}

			}}


	
